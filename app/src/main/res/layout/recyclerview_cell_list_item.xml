<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/paren_ll">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="88dp"
                app:srcCompat="@drawable/ic_982"
                android:id="@+id/ivofertasProduct"
                android:layout_marginLeft="5dp"
                android:layout_height="88dp"
                android:background="@color/cardview_light_background"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <ImageView
                android:layout_width="88dp"
                android:layout_height="30dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/ivofertasCategory"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvofertasName"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp" />
            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvofertasDescription"
                android:lines="2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="12sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvofertasPrice" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvofertasOfferPrice"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvquantity"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvtotal"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvofertasValidTill"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:gravity="center_horizontal">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvofertasOffer"
                android:lines="1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/red_custom"
                android:layout_marginRight="5dp"
                android:textColor="@android:color/background_light"
                android:gravity="center" />

            <!--<ImageButton-->
                <!--app:srcCompat="@android:drawable/ic_menu_delete"-->
                <!--android:id="@+id/imageButton3"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_marginBottom="5dp"-->
                <!--android:foregroundGravity="center_vertical" />-->

            <ImageView
                android:layout_height="match_parent"
                android:id="@+id/delete_product"
                android:foregroundGravity="center_vertical"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_delete_32"
                android:layout_width="32dp" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>